{
    "manifest_version": 2,
    "name": "Tab Manager Pro",
    "version": "0.0.2",

    "description": "Chrome extension to add useful keyboard shortcuts",
    "icons": {
        "16": "icons/tab-16.png",
        "24": "icons/tab-24.png",
        "32": "icons/tab-32.png",
        "64": "icons/tab-64.png"
    },

    "author": "Supercaly",

    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_icon": {
            "16": "icons/tab-16.png",
            "24": "icons/tab-24.png",
            "32": "icons/tab-32.png",
            "64": "icons/tab-64.png"
        },
        "default_title": "TabManagerPro"
    },
    
    "permissions": ["tabs"],
    
    "commands": {
        "duplicate_page": {
            "suggested_key": {
                "default": "Ctrl+Shift+D",
                "mac": "Command+Shift+D"
            },
            "description": "Duplicate current page"
        },
        "default_pages": {
            "suggested_key": {
                "default": "Ctrl+Shift+H",
                "mac": "Command+Shift+H"
            },
            "description": "Open default pages"
        }
    }
}